ifndef OTA_IP
  OTA_IP = 192.168.20.187
endif

ifndef CPU
  CPU = cc13xx
  ${info Not CPU define, use: "CPU=cc26xx" or "CPU=cc13xx". Set default: $(CPU)}
endif

ifndef BOARD
  BOARD = udboards
  ${info Not BOARD define, use: "BOARD=srf06" or "BOARD=udboards". Set default: $(BOARD)}
endif

define generate-targets
$(1):
	lua ../../tools/selective_clean.lua $(2) $(3) || make cleanall BOARD=$$(BOARD)/$$(CPU) CPU=$$(CPU)
	make net-bootloader CPU=$$(CPU) BOARD=$$(BOARD)/$$(CPU)
	make -j5 TARGET=unwired BOARD=$$(BOARD)/$$(CPU) -f makefiles/Makefile.$$@
	arm-none-eabi-size $$@.elf | grep -v text | lua ../../tools/mem_used.lua 125000 20000 || true
	../bootloader/generate-metadata/generate-metadata $$@.bin 0x0 0x00A10001 1 > /dev/null
	srec_cat firmware-metadata.bin -binary $$@.bin -binary -offset 0x100 -o $$@-ota-image.bin -binary
	srec_cat ../bootloader/bootloader.hex -intel -crop 0x0 0x2000 0x1FFA8 0x20000 $$@-ota-image.bin -binary -offset 0x2000 -crop 0x2000 0x1B000 -o $$@-firmware.hex -intel
	rm $(1).hex

$(1)-CLEAN: $(1)
	make clean_artefacts BOARD=$$(BOARD)/$$(CPU) CPU=$$(CPU)

$(1)-fb: $(1)-CLEAN
	while true; do ../../tools/backdoor-bootloader.py -e -w -v $(1)-firmware.hex && break || sleep 1; done;

$(1)-f: $(1)-CLEAN
	/Applications/ti/Uniflash/flash_$$(CPU).sh $(1)-firmware.hex

$(1)-ota: $(1)
	scp $(1)-ota-image.bin root@$$(OTA_IP):/root/unwired_smarthome
endef

clean_no_hex:
	-rm -f *~ *core core *.srec *.lst *.map *.cprg *.bin *.data contiki*.a *.firmware core-labels.S *.ihex *.ini *.ce *.co *.unwired *.elf  *.o *.d
	-rm -rf obj_unwired

clean:
	-rm -f *~ *core core *.srec *.lst *.map *.cprg *.bin *.data contiki*.a *.firmware core-labels.S *.ihex *.ini *.ce *.co *.unwired *.elf  *.o *.d
	-rm -rf obj_unwired
	-rm -f *.hex

clean_artefacts:
	-rm -f *~ *core core *.srec *.lst *.map *.cprg *.bin *.data contiki*.a *.firmware core-labels.S *.ihex *.ini *.ce *.co *.unwired *.elf *.o *.d

cleanall: clean net-bootloader-clean

net-bootloader-clean:
	cd ../bootloader && make clean

net-bootloader:
	cd ../bootloader && make -j5 CPU=$(CPU) bootloader.hex

serial:
	../../tools/sky/serialdump-macos -b115200 /dev/tty.usbserial-* || ../../tools/sky/serialdump-macos -b115200 /dev/tty.SLAB_USBtoUART

minicom:
	minicom -D /dev/tty.usbserial-* ||  minicom -D /dev/tty.SLAB_USBtoUART

